{
    "name": "overwatch-script-to-workshop",
    "displayName": "Overwatch Script To Workshop",
    "description": "Autocomplete and syntax highlighting for Overwatch Script To Workshop",
    "version": "1.3.0",
    "publisher": "Deltin",
    "engines": {
        "vscode": "^1.34.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:ostw",
        "onLanguage:ow_ostw",
        "workspaceContains:**/customGameSettings.json"
    ],
    "main": "./dist/extension",
    "contributes": {
        "languages": [
            {
                "id": "ostw",
                "aliases": [
                    "Overwatch Script To Workshop",
                    "ostw"
                ],
                "extensions": [
                    ".del",
                    ".ostw",
                    ".workshop"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "ow_ostw",
                "aliases": [
                    "Overwatch Output",
                    "ow"
                ],
                "extensions": [
                    ".ow",
                    ".overwatch"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ostw",
                "scopeName": "source.del",
                "path": "./syntaxes/ostw.tmLanguage.json"
            },
            {
                "language": "ow_ostw",
                "scopeName": "ow_source.del",
                "path": "./syntaxes/ow.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "ostw",
            "properties": {
                "ostw.outputLanguage": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "English",
                        "German",
                        "Spanish (Castilian)",
                        "Spanish (Mexico)",
                        "French",
                        "Italian",
                        "Japanese",
                        "Korean",
                        "Polish",
                        "Portuguese",
                        "Russian",
                        "Chinese (S)",
                        "Chinese (T)"
                    ],
                    "default": "English",
                    "description": "The output language of the OSTW output."
                },
                "ostw.optimizeOutput": {
                    "scope": "window",
                    "type": "boolean",
                    "default": true,
                    "description": "Determines if the workshop output will be optimized."
                },
                "ostw.deltintegerPath": {
                    "scope": "machine",
                    "type": "string",
                    "description": "The path to Deltinteger.exe."
                },
                "ostw.newRelease": {
                    "scope": "machine",
                    "type": "boolean",
                    "default": true,
                    "description": "Determines if the new release notification is shown."
                },
                "ostw.ignoreRelease": {
                    "scope": "machine",
                    "type": "string",
                    "description": "Ignores a release tag."
                },
                "ostw.codelens.references": {
                    "scope": "window",
                    "type": "boolean",
                    "description": "Determines if the references code lens is shown.",
                    "default": true
                },
                "ostw.codelens.implements": {
                    "scope": "window",
                    "type": "boolean",
                    "description": "Determines if the implements code lens is shown.",
                    "default": true
                },
                "ostw.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        },
        "commands": [
            {
                "command": "ostw.virtualDocumentOutput",
                "title": "Create a panel for workshop code output.",
                "category": "Overwatch Script To Workshop"
            },
            {
                "command": "ostw.showReferences",
                "title": "Show References",
                "category": "Overwatch Script To Workshop"
            }
        ],
        "jsonValidation": [
            {
                "fileMatch": "customGameSettings.json",
                "url": "./LobbySettingValidation.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile && webpack --mode production",
        "compile": "tsc -b && webpack --mode development",
        "watch": "tsc -b -w",
        "postinstall": "npm install",
        "test": "sh ./scripts/e2e.sh",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test-compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.0",
        "@types/node": "^8.10.59",
        "node-fetch": "^2.6.0",
        "ts-loader": "^6.2.2",
        "tslint": "^5.20.1",
        "typescript": "^3.8.3",
        "vscode": "^1.1.36",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.11"
    },
    "dependencies": {
        "async": "^3.2.0",
        "node-fetch": "^2.6.0",
        "vscode-languageclient": "^5.2.1"
    }
}
