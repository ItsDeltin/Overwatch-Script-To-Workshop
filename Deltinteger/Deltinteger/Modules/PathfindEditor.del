void pressLoop(BlockLambda action)
{
    action.Invoke();
    Wait(0.5, WaitBehavior.AbortWhenFalse);
    while (true)
    {
        action.Invoke();
        Wait(0.1, WaitBehavior.AbortWhenFalse);
        AbortIfConditionIsFalse();
    }
}

