rule: "Connect Segments From First"
Event.OngoingPlayer
if (CurrentMode == Mode.Place)
if (IsButtonHeld(EventPlayer(), b_connectNodes))
if (!IsButtonHeld(EventPlayer(), Button.Crouch))
if (PlaceMode == 2)
{
